        <Label Content="СВОЯ ИГРА" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="111" Width="386" FontSize="72" FontFamily="Bahnschrift"/>
        <ComboBox Name="combo1"  HorizontalAlignment="Left" Margin="385,155,0,0" VerticalAlignment="Top" Width="368" Height="45">
            <MenuItem FontSize="24" Header="1"/>
            <MenuItem FontSize="24" Header="2"/>
            <MenuItem FontSize="24" Header="3"/>
            <MenuItem FontSize="24" Header="4"/>
        </ComboBox>
        <Button Content="Начать" FontSize="48" HorizontalAlignment="Center" Margin="0,321,0,0" VerticalAlignment="Top" Height="85" Width="300" Click="Button_Click"/>
    </Grid>
</Window>
